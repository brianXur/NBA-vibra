---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import logo from '../images/logodefinitivo.webp'
import fondo from '../images/fondo.webp'
import {espacios} from '../const/navegacion.ts'
import Anchor from '../components/Anchor.astro';
---

<Layout title="NBA vibra">
	<main class="py-0 min-w-full min-h-screen flex flex-col items-center justify-center relative overflow-hidden " >
		<header id="anchor-inicio" class="min-w-full min-h-screen flex flex-row items-center justify-center relative overflow-hidden p-0">
			<nav >
				<ul class="flex font-semibold gap-10 text-3xl items-center justify-center py-2 fixed inset-x-0 top-0 z-30">
					<Anchor href='inicio'>Inicio</Anchor>
					<Anchor href='espacios'>Espacios</Anchor>
					<Anchor href='informacion'>Informaci√≥n</Anchor>
				</ul>
			</nav>
		<Image src={logo} alt="logo de NBA Vibra"/>
		<Image  class="absolute -z-10 opacity-25  h-full object-cover"src={fondo} alt="fondo de NBA Vibra"/>
		</header>
		<section id="anchor-espacios" class="flex flex-row flex-wrap gap-7 justify-center pt-4">
			{espacios.map(({img, href, name}) => {
				return (
					<a class="relative flex items-center justify-center h-[280px] w-[500px]" href={href}>
						<Image src={img} alt={`logo de ${name}`} class="object-cover h-[280px] w-[500px]" title={name}/>
						<div class="text-cyan-900 opacity-0 hover:opacity-100 duration-300 bg-white hover:bg-opacity-70 absolute inset-0 z-10 flex justify-center items-center text-5xl font-semibold">{name}</div>
					</a>
					)
			})}
		</section>
		<section id="anchor-informacion" class="h-[1200px] p-4">
			<p>Contacto: </p>
			<p>Email: </p>
		</section>
	</main>
</Layout>




