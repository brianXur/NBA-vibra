<Layout title="NBA vibra">
	<main class="py-0 min-w-full min-h-screen flex flex-col items-center justify-center relative overflow-hidden " >
		<header id="anchor-inicio" class="min-w-full min-h-screen flex flex-row items-center justify-center relative overflow-hidden p-0">
			<nav >
				<ul class="flex font-semibold gap-10 text-3xl items-center justify-center py-2 fixed inset-x-0 top-0 z-30">
