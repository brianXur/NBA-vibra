---
import Layout from "../layouts/Layout.astro";

import { Image } from "astro:assets";
import NavBar from "../components/NavBar.astro";
import { equipos } from "../const/navegacion";

---
<Layout title="Equipos">
  <header class="flex flex-col justify-center items-center p-4 gap-4">
    <NavBar/>
    <h1 class="text-5xl font-semibold">JUGADORES</h1>
  </header>
  <section class="grid grid-cols-2 p-10 gap-6 justify-center">
    <p class="justify-center flex text-3xl capitalize">ESTE</p>
    <p class="justify-center flex text-3xl capitalize">OESTE</p>
    {equipos.map(({name, logo}) => (
      <a class="flex flex-col items-center justify-center bg-sky-800/70 rounded-xl p-5 font-semibold" href={`Jugadores/${name}`}>
        <div>{name}</div>
        <Image class="h-32 w-32 object-contain" src={logo} alt={`logo de el equipo ${name}`}/>
      </a>
    ))}
  </section>
</Layout>

<style>
  a, p {
    font-family: Arial, Helvetica, sans-serif;
  }
</style>