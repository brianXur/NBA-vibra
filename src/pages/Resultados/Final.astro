---
import Layout from "../../layouts/Layout.astro";
import PlayoffFace from "../../components/PlayoffFace.astro"
import BackHome from "../../components/BackHome.astro";

const playoffEast = [
{
team1: "Denver Nuggets",
    team2: "Miami Heat",
    games: [
  { gameNumber: 1, resultTeam1: 'Nuggets 104', resultTeam2: 'Heat 93 (1-0)' },
  { gameNumber: 2, resultTeam1: 'Nuggetss 108', resultTeam2: 'Heat 111 (1-1)' },
  { gameNumber: 3, resultTeam1: 'Heat 94', resultTeam2: 'Nuggets 109 (1-2)' },
  { gameNumber: 4, resultTeam1: ' Heat 95', resultTeam2: 'Nuggets 108 (1-3)' },
  { gameNumber: 5, resultTeam1: 'Nuggets 94', resultTeam2: 'Heat 89 (4-1)' },
