    <section class="flex flex-col flex-wrap gap-4 justify-start items-center">
      {playoffEast.map(({team1, team2, games}) => (
        <PlayoffFace team1={team1} team2={team2}  games={games}/>
      ))}
    </section>
    <section class="flex flex-row flex-wrap gap-4 justify-center items-center pt-10">
